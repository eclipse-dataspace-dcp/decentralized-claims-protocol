{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "title": "CredentialMessageSchema",
  "type": "object",
  "allOf": [
    {
      "$ref": "#/definitions/CredentialMessage"
    }
  ],
  "$id": "https://w3id.org/dspace-dcp/v1.0/presentation/credential-message-schema.json",
  "definitions": {
    "CredentialMessage": {
      "type": "object",
      "properties": {
        "@context": {
          "$ref": "https://w3id.org/dspace-dcp/v1.0/common/context-schema.json"
        },
        "credentials": {
          "type": "array",
          "items": {
            "$ref": "https://w3id.org/dspace-dcp/v1.0/presentation/credential-message-schema.json#/definitions/CredentialContainer"
          }
        },
        "issuerPid": {
          "type": "string"
        },
        "holderPid": {
          "type": "string"
        },
        "credentialType": {
          "type": "string",
          "const": "CredentialMessage"
        },
        "format": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": ["ISSUED", "REJECTED"]
        },
        "rejectionReason": {
          "type": "string"
        }
      },
      "required": [
        "@context",
        "type",
        "issuerPid",
        "holderPid",
        "status"
      ]
    },
    "CredentialContainer": {
      "type": "object",
      "properties": {
        "payload": {
          "type": [
            "string"
          ]
        },
        "type": {
          "type": "string",
          "const": "CredentialContainer"
        }
      },
      "required": [
        "payload",
        "credentialType",
        "format"
      ]
    }
  }
}
{
  "@context": [
    "https://w3id.org/dspace-dcp/v1.0/dcp.jsonld"
  ],
  "type": "IssuerMetadata",
  "issuer": "did:web:issuer-url",
  "credentialsSupported": [
    {
      "type": "CredentialObject",
      "credentialType": [
        "VerifiableCredential",
        "CompanyCredential"
      ],
      "offerReason": "reissue",
      "bindingMethods": [
        "did:web"
      ],
      "profiles": [
        "vc20-bssl/jwt", "vc10-sl2021/jwt", "..."
      ],
      "issuancePolicy": {
        "id": "Scalable trust example",
        "input_descriptors": [
          {
            "id": "pd-id",
            "constraints": {
              "fields": [
                {
                  "path": [
                    "$.vc.type"
                  ],
                  "filter": {
                    "type": "string",
                    "pattern": "^AttestationCredential$"
                  }
                }
              ]
            }
          }
        ]
      }
    }
  ]
}
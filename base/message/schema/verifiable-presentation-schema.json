{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Verifiable Presentation",
    "type": "object",
    "properties": {
        "@context": {
            "type": "array",
            "description": "JSON-LD context for the schema",
            "items": {
                "type": "string"
            }
        },
        "id": {
            "type": "string",
            "description": "Presentation identifier"
        },
        "type": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Types of the presentation"
        },
        "verifiableCredential": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Array of verifiable credentials included in the presentation"
        }
    },
    "required": ["@context", "id", "type", "verifiableCredential"]
}
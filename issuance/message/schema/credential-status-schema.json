{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CredentialStatus",
  "type": "object",
  "properties": {
    "@context": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Specifies a valid Json-LD context"
    },
    "@type": {
      "type": "string"
    },
    "requestId": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": ["RECEIVED", "REJECTED", "ISSUED"]
    }
  },
  "required": ["@context", "@type", "requestId", "status"]
}

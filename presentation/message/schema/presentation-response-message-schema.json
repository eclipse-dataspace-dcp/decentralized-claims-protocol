{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PresentationResponseMessage",
  "type": "object",
  "properties": {
      "@context": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "description": "Specifies a valid Json-LD context"
      },
      "@type": {
          "type": "string"
      },
      "presentation": {
          "type": "array",
          "items": {
              "anyOf": [
                  {
                      "type": "string"
                  },
                  {
                      "$ref": "#/definitions/verifiablePresentation"
                  }
              ]
          }
      }
  },
  "required": ["@context", "@type", "presentation"],
  "definitions": {
      "verifiablePresentation": {
          "type": "object",
          "properties": {
              "@context": {
                  "type": "array",
                  "items": {
                      "type": "string"
                  }
              },
              "type": {
                  "type": "string"
              },
              "verifiableCredential": {
                  "type": "array",
                  "items": {
                      "type": "object"
                  }
              },
              "proof": {
                  "type": "object",
                  "properties": {
                      "type": {
                          "type": "string"
                      },
                      "created": {
                          "type": "string",
                          "format": "date-time"
                      },
                      "verificationMethod": {
                          "type": "string"
                      },
                      "proofPurpose": {
                          "type": "string"
                      },
                      "jws": {
                          "type": "string"
                      }
                  },
                  "required": ["type", "created", "verificationMethod", "proofPurpose", "jws"]
              }
          },
          "required": ["@context", "type", "verifiableCredential", "proof"]
      }
  }
}

{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "PresentationQueryMessage",
    "type": "object",
    "properties": {
      "@context": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "@type": {
        "type": "string"
      },
      "presentationDefinition": {
        "type": ["object", "null"]
      },
      "scope": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    },
    "required": ["@context", "@type"],
    "oneOf": [
      {
        "required": ["presentationDefinition"],
        "not": {
          "required": ["scope"]
        }
      },
      {
        "required": ["scope"],
        "not": {
          "required": ["presentationDefinition"]
        }
      }
    ]
}
  